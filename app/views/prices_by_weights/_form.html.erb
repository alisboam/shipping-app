<%= bootstrap_form_with(model: @price_by_weight, layout: :horizontal, label_col: "col-sm-1", control_col: "col-sm-5") do |form| %>
	<div>
		<%= form.text_field :min_weight, required: true %>
	</div>
	<div>
		<%= form.text_field :max_weight, required: true %>
	</div>
	<div>
		<%= form.text_field :price, required: true %>
		<%= form.text_field :price, help: 'o valor deve ser informado em centavos' %>
	</div>
	<div>
		<%= form.hidden_field :modality_id, :value => @modality.id %>
	</div>
  <div> 
		<%= form.submit 'Enviar', class: "btn btn-success" %>
	</div>
<% end %>