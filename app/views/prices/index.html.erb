<div>
    <h2><%=PricesByDistance.model_name.human %></h2>
    <% if @prices_by_distances.any? %>
      <div class="table-responsive">
        <%= render 'index_distance' %>
      </div>
    <% else %>
      <span> 'Não existem intervalos cadastrados para preço por distância' </span>
    <% end %>
  </div>

  <div>
    <h2><%=PricesByWeight.model_name.human %></h2>
    <% if @prices_by_weights.any? %>
      <div class="table-responsive">
        <%= render 'index_weight' %>
      </div>
    <% else %>
      <span> 'Não existem intervalos cadastrados para preço por peso' </span>
    <% end %>
  </div>
</div>
